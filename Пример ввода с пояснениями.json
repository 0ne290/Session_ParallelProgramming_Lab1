// Любые числовые значения меньше 1 считаются некорректными и заменяются корректным случайным значением в определенном диапазоне (диапазон см. в комментариях к соответствующему полю). Это не распространяется на поля Np и Nr
{
	"Pa": true,// true - алгоритм планирования "SJF, preemptive, absolute priority"; false - "SJF, nonpreemptive"
	"Qt": -6,// [1; 1000]
	"MaxT": -6,// [1; 10]
	"MaxP": -3,// [1; Np]
	"Nr": 4,// Если значение меньше кол-ва явно описанных ресурсов (эл-ы поля Resources), то оно заменяется на это кол-во
	"Np": 8,// Если значение меньше кол-ва явно описанных потоков (эл-ы поля Threads), то оно заменяется на это кол-во
	"Resources": [// Если кол-во эл-ов меньше значения Nr, то остаток не указанных явно ресурсов сгенерируется случайно
		{
			"Name": "Resource1",// Если указать пустую строку, то значение в формате $"R{resourceCounter}" установится автоматически (следовательно, напрашивается интересный вывод: рекомендуется не использовать явно имена в этом формате)
			"Capacity": -5// [1; Np / 2]
		},
		{
			"Name": "",
			"Capacity": 2
		}
	],
	"Threads": [// Если кол-во эл-ов меньше значения Np, то остаток не указанных явно потоков сгенерируется случайно
		{
			"Name": "Thread1",// Если указать пустую строку, то значение в формате $"T{threadCounter}" установится автоматически (следовательно, напрашивается интересный вывод: рекомендуется не использовать явно имена в этом формате)
			"Priority": 1,// [1; MaxP]
			"CpuBurst": 3,// [1; MaxT]
			"Quantity": 1,// [1; 5]
			"ResourceNames": [// Если кол-во эл-ов равно 0, то выберется случайное кол-во случайных ресурсов (очевидно, что в таком случае возможны всякие "интересные" варианты: например, если Nr равно 7, то для потока может выбраться 7 одинаковых ресурсов (пусть это будет, например, ресурс "Res" - тогда потоку для полной отработки потребуется выполнить все свои единицы CpuBurst на ресурсе "Res" СЕМЬ РАЗ - т. е. поток будет первый раз все свои единицы CpuBurst обращаться к ресурсу "Res", второй, третиё и т. д. до 7))
				"R1",// Если указать пустую строку, то выберется случайный ресурс
				"R2"
			]
		},
		{
			"Name": "Thread2",
			"Priority": 2,
			"CpuBurst": 1,
			"Quantity": 1,
			"ResourceNames": [
				"R2",
				"R1"
			]
		},
		{
			"Name": "",
			"Priority": 3,
			"CpuBurst": 5,
			"Quantity": 1,
			"ResourceNames": [
				"R1",
				"R2"
			]
		},
		{
			"Name": "Thread4",
			"Priority": -3,
			"CpuBurst": 3,
			"Quantity": 1,
			"ResourceNames": [
				"R2",
				"R1"
			]
		},
		{
			"Name": "Thread5",
			"Priority": 2,
			"CpuBurst": -3,
			"Quantity": 1,
			"ResourceNames": [ ]
		},
		{
			"Name": "Thread6",
			"Priority": 3,
			"CpuBurst": 4,
			"Quantity": 1,
			"ResourceNames": [
				"",
				""
			]
		}
	]
}